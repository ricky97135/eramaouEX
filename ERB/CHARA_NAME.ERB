;--------------------------------------------------
;	角色名：對SAVESTR系統重構
;--------------------------------------------------
@CN_REBUILD
FOR LOCAL, 0, CHARANUM
	SIF LOCAL == 0
		CONTINUE
	SAVESTR:LOCAL '= CALLNAME:LOCAL
NEXT


;--------------------------------------------------
;	角色名：從NID匹配登錄的角色
;--------------------------------------------------
@NID_FINDCHARAS(L_NID)
#DIM L_NID
#DIM L_I

L_I = 0
VARSET RESULT
FOR LOCAL, 0, CHARANUM
	IF CFLAG:LOCAL:6 == L_NID
		RESULT:L_I = LOCAL
		L_I += 1
	ENDIF
NEXT

RESULT:L_I = -1
RETURN RESULT:0

