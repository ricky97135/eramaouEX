;--------------------------------------------------
;	角色名：對一個角色初始命名 
;	（僅用於角色初始化）
;--------------------------------------------------
@CHARA_NAME_DEFINE(L_A, L_NID = -1)
#DIM L_A
#DIM L_NID


; 特殊角色使用特定名字
IF INRANGE(NO:L_A, 17,40) || NO:L_A == 0
	NAME:L_A '= CSVNAME(NO:L_A)
	CALLNAME:L_A '= CSVCALLNAME(NO:L_A)
	SAVESTR:L_A '= CSVCALLNAME(NO:L_A)
	
	;定義NID
	CFLAG:L_A:6 = 10000 + NO:L_A
	CALL RELATION_RENAME_REBUILD(L_A)
	RETURN 0
ENDIF


IF L_NID < 0
	L_NID = CFLAG:L_A:6
ELSE	
	CFLAG:L_A:6 = L_NID
	CALL RELATION_RENAME_REBUILD(L_A)
ENDIF

; 使用固定名
IF L_NID < 1000000000
	; 固定名列表
	IF L_NID < VARSIZE("LIST_CHARA_NAME")
		LOCALS '= LIST_CHARA_NAME:L_NID
		
		IF STRLENS(LOCALS) > 0
			NAME:L_A '= LOCALS
			CALLNAME:L_A '= LOCALS
			SAVESTR:L_A '= LOCALS
		ELSE
			;名字沒有被記錄
			NAME:L_A = 佳奈美
			CALLNAME:L_A = 佳奈美
			SAVESTR:L_A = 佳奈美
		ENDIF
	ELSE
		; 無效的NID
		NAME:L_A = 佳奈美
		CALLNAME:L_A = 佳奈美
		SAVESTR:L_A = 佳奈美
		L_NID = VARSIZE("LIST_CHARA_NAME")
	ENDIF

; 使用隨機名
ELSE
	CALL CN_SPAN_COMBINE_NAME, L_NID
	NAME:L_A '= RESULTS
	CALLNAME:L_A '= RESULTS
	SAVESTR:L_A '= RESULTS
ENDIF


;--------------------------------------------------
;	角色名：將一個角色的名字重置為初始值
;	（NAME應該且只應該在角色初始化時賦值）
;--------------------------------------------------
@CHARA_NAME_RESET(L_A)
#DIM L_A

