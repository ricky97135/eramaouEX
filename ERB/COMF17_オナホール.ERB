;-------------------------------------------------
;飛機杯
;道具使用コマンド：調教対象のペニスを飛機杯で刺激
;-------------------------------------------------
@COM17

IF TEQUIP:90
	PRINTL 觸手凌辱陰莖
	;SAVESTR:22 = 觸手凌辱陰莖
ELSE
	PRINTL 飛機杯
	;SAVESTR:22 = 飛機杯
ENDIF
CALL TRAIN_MESSAGE_B

LOSEBASE:0 += 10
LOSEBASE:1 += 80

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
SOURCE:12 = 120
SOURCE:14 = 70

;ABL:陰蒂感覺をみる
IF ABL:0 == 0
	SOURCE:0 = 200
ELSEIF ABL:0 == 1
	SOURCE:0 = 400
ELSEIF ABL:0 == 2
	SOURCE:0 = 900
ELSEIF ABL:0 == 3
	SOURCE:0 = 1600
ELSEIF ABL:0 == 4
	SOURCE:0 = 2400
ELSE
	SOURCE:0 = 3000
ENDIF

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:40 += 1
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:41 += 1
ENDIF

;-------------------------------------------------
;飛機杯の著脫
;-------------------------------------------------
TEQUIP:17 = 1 - TEQUIP:17
SIF TEQUIP:90
	T = 0

;-------------------------------------------------
;汚れ（觸手）
;-------------------------------------------------
IF TEQUIP:90 && TEQUIP:17
	STAIN:3 |= 2
	STAIN:3 |= 4
ENDIF

RETURN 1

;-------------------------------------------------
;-------------------------------------------------
;飛機杯裝備中
;-------------------------------------------------
@EQUIP_COM17

IF TEQUIP:90
	PRINTL ＜觸手玩弄陰莖中＞
ELSE
	PRINTL ＜飛機杯裝備中＞
ENDIF

LOSEBASE:0 += 5
LOSEBASE:1 += 20

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
;ABL:陰蒂感覺をみる
IF ABL:0 == 0
	A = 40
ELSEIF ABL:0 == 1
	A = 120
ELSEIF ABL:0 == 2
	A = 250
ELSEIF ABL:0 == 3
	A = 450
ELSEIF ABL:0 == 4
	A = 600
ELSE
	A = 750
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.20
ENDIF

;ABL:順從をみる
IF ABL:10 == 0
	TIMES A , 0.80
ELSEIF ABL:10 == 1
	TIMES A , 0.90
ELSEIF ABL:10 == 2
	TIMES A , 1.00
ELSEIF ABL:10 == 3
	TIMES A , 1.10
ELSEIF ABL:10 == 4
	TIMES A , 1.20
ELSE
	TIMES A , 1.30
ENDIF

SOURCE:0 += A
SOURCE:11 += 50
SOURCE:12 += 50

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:40 += 1
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:41 += 1
ENDIF

SIF TEQUIP:90
	T += 1

RETURN 1
