@EQUIP_POWERUP, ARG:0
;-------------------------------------------------------------------
;Wに入れた裝備品の能力をキャラの能力で強化する
;EQUIP_DATABASE後に使用すること
;ARG:0がキャラ

;初心者（ダメージ減少・ミス増加）
IF TALENT:(ARG:0):291 == 1
	W:9 -= 10
	W:11 += 10
ENDIF

;惡魔尾巴（ダメージ強化）
SIF TALENT:(ARG:0):246 == 1
	W:9 += 10

;悪魔目（気力ダメージ強化）
SIF TALENT:(ARG:0):247 == 1
	W:16 += 10

;獨眼（ダメージ強化・ミス増加）
IF TALENT:(ARG:0):259 == 1
	W:9 += 10
	W:11 += 10
ENDIF

;額頭天眼（気力ダメージ強化・気力消費）
IF TALENT:(ARG:0):260 == 1
	W:16 += 10
	W:12 -= 10
ENDIF

;角（ダメージ強化・気力消費）
IF TALENT:(ARG:0):264 == 1
	W:9 += 10
	W:12 -= 10
ENDIF

;エルフの弓裝備で連続ボーナス
SIF W:1 == 45 && TALENT:(ARG:0):314 == 1
	W:13 += 10

;天使は気力が回復する
SIF TALENT:(ARG:0):314 == 6
	W:12 += 10

;ダークエルフ（気力ダメージ強化）
SIF TALENT:(ARG:0):314 == 7
	W:16 += 10

;墮天使は連続攻撃
SIF TALENT:(ARG:0):314 == 8
	W:13 += 10

;魔族は防禦ダメージ
SIF TALENT:(ARG:0):314 == 9
	W:14 += 10

;能力者効果

IF TALENT:(ARG:0):275
	;火之能力者
	GETBIT W:6, 1
	IF RESULT
		;火屬性の場合、火力強化
		W:9 += 10
	ELSE
		;無屬性の場合、ノーリスクで火屬性化
		W:6 += 2
	ENDIF
ENDIF

IF TALENT:(ARG:0):276
	;冰之能力者
	GETBIT W:6, 2
	IF RESULT
		;冷気屬性の場合、連続強化
		W:13 += 10
	ELSE
		;無屬性の場合、ノーリスクで冷気屬性化
		W:6 += 4
	ENDIF
ENDIF

IF TALENT:(ARG:0):277
	;雷之能力者
	GETBIT W:6, 3
	IF RESULT
		;電撃屬性の場合、連続・攻撃強化
		W:13 += 5
		W:9 += 5
	ELSE
		;無屬性の場合、ノーリスクで電撃屬性化
		W:6 += 8
	ENDIF
ENDIF

IF TALENT:(ARG:0):278
	;光之能力者
	IF W:12 > 0
		;気力回復の場合、連続・攻撃・気力回復強化
		W:13 += 5
		W:9 += 5
		W:12 += 5
	ELSE
		;気力回復が無い場合、気力回復強化
		W:12 += 10
	ENDIF
ENDIF

IF TALENT:(ARG:0):279
	;暗之能力者
	IF W:16 > 0
		;気力ダメージ強化の場合、連続・攻撃・気力ダメージ強化
		W:13 += 5
		W:9 += 5
		W:16 += 5
	ELSE
		;気力ダメージ強化が無い場合、気力ダメージ強化
		W:16 += 10
	ENDIF
ENDIF

RETURN 0

