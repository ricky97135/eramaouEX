IF ABL:10 == 0
	TIMES A , 0.80
ELSEIF ABL:10 == 1
	TIMES A , 0.90
ELSEIF ABL:10 == 2
	TIMES A , 1.00
ELSEIF ABL:10 == 3
	TIMES A , 1.10
ELSEIF ABL:10 == 4
	TIMES A , 1.20
ELSE
	TIMES A , 1.30
ENDIF


;魁梧
SIF TALENT:99
	TIMES B , 0.80
;嬌小
SIF TALENT:100
	TIMES B , 2.00
;未熟
SIF TALENT:135
	TIMES B , 4.00

;看重貞操
IF TALENT:30
	;處女はありえない
	TIMES B, 3.00
ENDIF

SOURCE:1 += A
SOURCE:6 += B

