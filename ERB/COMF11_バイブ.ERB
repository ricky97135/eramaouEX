;バイブ
;道具使用コマンド：調教対象のヴァギナをバイブで刺激
;-------------------------------------------------
@COM11
;處女を奪うかどうかの確認
CALL CONFIRM_LOST_VIRGIN
SIF RESULT == 0
	RETURN 0

IF TEQUIP:90
	PRINTL 觸手插入
	;SAVESTR:22 = 觸手插入
ELSE
	PRINTL 蠕蟲
	;SAVESTR:22 = バイブ
ENDIF

IF DAY:2 == 15 && TALENT:190 == 0
	PRINTL *滿月是蠕蟲的產卵期，要繼續嗎？*
	PRINTL [0] 好的 [1] 算了
	INPUT
	SIF RESULT != 0
		RETURN 0
ENDIF

CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:0 += 30
LOSEBASE:1 += 100

;ABL:私處感覺をみる
IF ABL:2 == 0
	SOURCE:1 = 80
ELSEIF ABL:2 == 1
	SOURCE:1 = 250
ELSEIF ABL:2 == 2
	SOURCE:1 = 600
ELSEIF ABL:2 == 3
	SOURCE:1 = 1000
ELSEIF ABL:2 == 4
	SOURCE:1 = 1300
ELSE
	SOURCE:1 = 1700
ENDIF

;EXP:私處經驗をみる
IF EXP:0 < EXPLV:1
	TIMES SOURCE:1 , 0.20
	SOURCE:6 = 5500
ELSEIF EXP:0 < EXPLV:2
	TIMES SOURCE:1 , 0.60
	SOURCE:6 = 300
ELSEIF EXP:0 < EXPLV:3
	TIMES SOURCE:1 , 1.00
	SOURCE:6 = 50
ELSEIF EXP:0 < EXPLV:4
	TIMES SOURCE:1 , 1.20
	SOURCE:6 = 10
ELSEIF EXP:0 < EXPLV:5
	TIMES SOURCE:1 , 1.40
	SOURCE:6 = 0
ELSE
	TIMES SOURCE:1 , 1.60
	SOURCE:6 = 0
ENDIF

;PALAM:潤滑をみる
IF PALAM:3 < PALAMLV:1
	TIMES SOURCE:1 , 0.10
	SOURCE:6 += 1000
	TIMES SOURCE:6 , 3.00
ELSEIF PALAM:3 < PALAMLV:2
	TIMES SOURCE:1 , 0.40
	SOURCE:6 += 400
	TIMES SOURCE:6 , 1.00
ELSEIF PALAM:3 < PALAMLV:3
	TIMES SOURCE:1 , 1.00
	TIMES SOURCE:6 , 0.50
ELSEIF PALAM:3 < PALAMLV:4
	TIMES SOURCE:1 , 1.40
	TIMES SOURCE:6 , 0.20
ELSEIF PALAM:3 >= PALAMLV:4
	TIMES SOURCE:1 , 1.80
	TIMES SOURCE:6 , 0.10
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:1 , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:1 , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:1 , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:1 , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:1 , 1.20
ENDIF

;ABL:順從をみる
IF ABL:10 == 0
	TIMES SOURCE:1 , 0.80
ELSEIF ABL:10 == 1
	TIMES SOURCE:1 , 0.90
ELSEIF ABL:10 == 2
	TIMES SOURCE:1 , 1.00
ELSEIF ABL:10 == 3
	TIMES SOURCE:1 , 1.10
ELSEIF ABL:10 == 4
	TIMES SOURCE:1 , 1.20
ELSE
	TIMES SOURCE:1 , 1.30
ENDIF

;魁梧
SIF TALENT:99
	TIMES SOURCE:6 , 0.80
;嬌小
SIF TALENT:100
	TIMES SOURCE:6 , 2.00
;未熟
SIF TALENT:135
	TIMES SOURCE:6 , 4.00

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
S = 0
;私處感覺が高いほど私處經驗が入る
IF ABL:2 <= 1
	S = 1
ELSEIF ABL:2 <= 4
	S = 2
ELSEIF ABL:2 <= 7
	S = 3
ELSE
	S = 4
ENDIF
EXP:0 += S
PRINTFORML 私處經驗+{S}
S = 0

;百合經驗
IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +3
	EXP:40 += 3
ENDIF

;-------------------------------------------------
;バイブの著脫
;-------------------------------------------------
TEQUIP:11 = 1 - TEQUIP:11
SIF TEQUIP:90
	T = 0

;-------------------------------------------------
;汚れ（觸手）
;-------------------------------------------------
IF TEQUIP:90 && TEQUIP:11
	STAIN:3 |= 2
	STAIN:3 |= 4
ENDIF

RETURN 1

