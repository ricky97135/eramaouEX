@PRINT_ARR_GROUP(L_ARR, L_VAL, L_IDX)
#DIMS REF L_ARR
#DIM L_I
#DIM L_VAL
#DIM L_IDX
#DIM L_LEN
#DIM L_SIZE
#DIM L_EXCEED

L_I = -1
L_LEN = 0
L_EXCEED = 0

SETCOLORBYNAME GRAY
PRINTV "  "

FOR L_I, 0, VARSIZE("L_ARR")

	LOCALS '= L_ARR:L_I
	LOCAL = STRLENS(LOCALS)
	
	IF LOCAL < 1
		L_EXCEED ++
		SIF L_EXCEED > 10 
			BREAK
		CONTINUE
	ENDIF
	
	L_LEN += LOCAL + 2
	
	IF L_LEN >= 80
		PRINTL
		PRINTV "  "
		L_LEN = LOCAL + 2
	ENDIF
	
	SIF L_I == L_VAL
		RESETCOLOR
	
	PRINTBUTTON @"[%LOCALS%]", L_IDX * 100 + L_I
	
	SIF L_I == L_VAL
		SETCOLORBYNAME GRAY
	
NEXT

RESETCOLOR
PRINTL
