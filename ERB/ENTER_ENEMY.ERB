@ENTER_ENEMY,ARG:0
#DIM CHARA, 1
;毎月月末ごろに襲來
;ARG:0 = 0 通常
;ARG:0 = キャラNo 知り合い・家族確定エントリー

;LOCAL = RAND:10 + 20
IF GETBIT(FLAG:700,3)
	LOCAL = 10
ELSE
	LOCAL = RAND:15 + 15

	SIF DAY:2 < LOCAL
		RETURN 0
ENDIF

;FLAG:60 = 勇者基礎レベル補正
;SIF DAY:2 > LOCAL && ARG:0 == 0 && FLAG:60 < 300
;	RETURN 0

;莉莉出現
SIF ARG:0 == 0 || TALENT:(ARG:0):村娘Ａ
	CALL K_11_LILY

;狂王出現
CALL K_34_crazylord

;フラグ確保
;B = 200
;REPEAT 16
;	FLAG:B = 1
;	B += 1
;REND

;今いるキャラのフラグを消す
;REPEAT CHARANUM
;	B = NO:COUNT + 199
;	FLAG:B = 0
;REND

;キャラが多すぎる場閤中斷(STICK修改，按照侵攻進度限制勇者數量)
IF FLAG:82 == 0 && CHARANUM > 60
	RETURN 0
ELSEIF FLAG:87 == 0 && FLAG:89 == 0 && FLAG:91 == 0 && CHARANUM > 65
	RETURN 0
ELSEIF ((FLAG:87 * FLAG:89 == 0) && (FLAG:89 * FLAG:91 == 0) && (FLAG:91 * FLAG:87 == 0)) && CHARANUM > 70
	RETURN 0
ELSEIF (FLAG:87 == 0 || FLAG:89 == 0 || FLAG:91 == 0) && CHARANUM > 75
	RETURN 0
ELSEIF FLAG:92 < 15  && CHARANUM > 80
	RETURN 0	
ELSEIF CHARANUM >= MAX_CHARANUM
	RETURN 0
ENDIF

;キャラのNOを選定 
CHARA = RAND(1, 17)
;GETCHARA(キャラ番號, SPフラグ)でキャラが存在しない場合は-1
;CFLAG:0が0ならば登録番號を返す。CFLAG:0が1=売卻可　2=助手可ならば-1が返るので同じキャラ番號のキャラが攻めてくる。
IF GETBIT(FLAG:5,32) || GETCHARA(CHARA, 0) == -1
	
	IF ARG:0 > 0
		LOCAL = 0
		ADDCHARA CHARA
		CALL ADDCHARA_EX, CHARANUM-1
		A = CHARANUM - 1
		CALL CHAR_MAKE,998,ARG:0
	ELSE
	;異國の勇者の判定をする
		CALL CHAR_MAKE_INPORT
		IF RESULT == 0
			LOCAL = 0
			ADDCHARA CHARA
			CALL ADDCHARA_EX, CHARANUM-1
			A = CHARANUM - 1
			CALL CHAR_MAKE
		ELSE
			LOCAL = 1
		ENDIF
	PRINTL *****************************************
	SIF LOCAL
		PRINT 異國的
	SIF TALENT:RESULT:1000
		PRINT 異界的
	IF TALENT:RESULT:122
		PRINT 冒險者
	ELSE
		PRINT 勇者
	ENDIF
	PRINTS SAVESTR:RESULT
	PRINTL 開始了地下城的攻略！
	PRINTL *****************************************
	WAIT
	;勇者LVUP
	IF FLAG:5 & 2
		FLAG:60 += 1
		PRINTFORMW 勇者基礎等級校正後現在是等級{FLAG:60}
	ENDIF
	ENDIF
ELSE
	PRINTL 出於對魔王的恐懼，勇者沒有出現。
	WAIT
	RETURN 0
ENDIF
PRINTL  
A = RESULT

;善惡值調整
SIF CFLAG:A:151 < -100
	CFLAG:A:151 = -100

CALL ENTERENEMY_KOUJO

;初期金錢
;Ref DUNGEON_TOWN.ERB
;高人氣ボーナス
LOCAL = 0
SIF TALENT:A:126
	LOCAL += 1000
;物乞い・貧民は援助が少ない
SIF TALENT:A:315 == 7 || TALENT:A:315 == 9
	LOCAL -= 500
;貴族・聖女・軍人は多い
SIF TALENT:A:315 == 8 || TALENT:A:315 == 12 || TALENT:A:315 == 19
	LOCAL += 1500
;金のため・自暴自棄は援助が少ない
SIF TALENT:A:316 == 2 || TALENT:A:316 == 11
	LOCAL -= 500
;國に命じられて・命令されては多い
SIF TALENT:A:316 == 9 || TALENT:A:316 == 13
	LOCAL += 500
	

;レベル補正
LOCAL += CFLAG:A:9

;對於不受歡迎的勇者
LOCAL = LOCAL <= 0 ? 0 # LOCAL

CFLAG:A:580 += LOCAL

;初期座標

;座標について…このXY座標は2Dマップモードで使用する座標ですが、現在は死んでいる変數です
;気が変わったときのために殘しています

LOCAL:0 = RAND:32
LOCAL:1 = RAND:32

IF RAND:4 == 0
	LOCAL:0 = 0
ELSEIF RAND:3 == 0
	LOCAL:1 = 0
ELSEIF RAND:2 == 0
	LOCAL:0 = 31
ELSE
	LOCAL:1 = 31
ENDIF

CFLAG:A:510 = LOCAL:0
CFLAG:A:511 = LOCAL:1

;初期座標設定終わり

IF GETBIT(FLAG:8, 1)
	PRINTL
	CALL SHOW_CHARA_INFO, A
	PRINTL
ENDIF

RETURN 1



