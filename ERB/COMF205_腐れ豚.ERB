;eramaou追加コマンド

;-------------------------------------------------
;腐爛豬
;汚らわしい怪物に陵辱されるっていいよね… レベル60以上
;-------------------------------------------------
@COM205

PRINTL 腐爛豬

CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;戦闘値の計算
;-------------------------------------------------
LOSEBASE:0 += CFLAG:0:9 * 25
LOSEBASE:0 /= 10
SIF BASE:0 <= 0
	LOSEBASE:0 /= 4
LOSEBASE:1 += CFLAG:0:9 * 20

CALL ARENA_SLAVE_POINT

;戦闘點が低ければ追加ダメージ || ;失神中はダメ
IF RESULT < (4 * CFLAG:0:9) || TFLAG:899 > 0
	;気力が0なら追加ダメージ無し
	IF BASE:1 <= 0 || TFLAG:899 > 0
		PRINTFORMW 腐爛豬跑到%SAVESTR:TARGET%的身邊蹲下，做標記似得在她身上蹭著腐敗的液體。
	ELSE
		;追加ダメージ
		PRINTFORMW 腐爛豬用腐敗液體淋透了%SAVESTR:TARGET%全身！
		LOSEBASE:0 += CFLAG:0:9 * 2
		LOSEBASE:1 += CFLAG:0:9 * 2
		IF BASE:1 < LOSEBASE:1
			PRINTFORMW %SAVESTR:TARGET%無法忍耐猛烈的臭氣，跪倒在地。
			PRINTW ＜奴隸陷落＞
		ENDIF
	ENDIF
ELSE
	PRINTFORMW %SAVESTR:TARGET%向腐爛豬發動突擊，才終於勉強打平。
ENDIF

;死鬥場収入
;TFLAG:402 += (LOSEBASE:0 * 4) + RAND:RESULT

TFLAG:400 = 205
;戦闘後の処理
CALL COM_AFTER_ARENA
SIF RESULT == 0
	RETURN 1

;-------------------------------------------------
;各種コマンドへ
;-------------------------------------------------
$INPUT_LOOP_0
PRINTL 對哪裡進行凌辱？
PRINTL [0] - 嘴巴
PRINTL [1] - 胸部
SIF !TALENT:122 && !TALENT:273 && CFLAG:42 != 79 
	PRINTL [2] - 私處
PRINTL [3] - 肛門
PRINTL [999] 暫時放過

INPUT

IF RESULT == 0
	PRINTL ＜腐爛豬・口交＞
	SELECTCOM = 31
	CALL COM31
	;口交実行不可時
	SIF RESULT == 0
		RETURN 0
	;死鬥場収入は陵辱時に増えるということにしましょう
	TFLAG:402 += (LOSEBASE:0 * 4) + RAND:RESULT
ELSEIF RESULT == 1
	PRINTL ＜腐爛豬・胸愛撫＞
	SELECTCOM = 5
	CALL COM5
	;死鬥場収入
	TFLAG:402 += (LOSEBASE:0 * 4) + RAND:RESULT
ELSEIF RESULT == 2
	;対像是男人，或帶有處女封印,或貞操帶
	SIF TALENT:122 || TALENT:273 || (CFLAG:42 == 79 && (CFLAG:40 & 64) && FLAG:37)
		RETURN 0
	PRINTL ＜腐爛豬・背後位＞
	SELECTCOM = 21
	CALL COM21
	;處女を奪わせなかった場合
	SIF RESULT == 0
		RETURN 0
	;死鬥場収入
	TFLAG:402 += (LOSEBASE:0 * 4) + RAND:RESULT
ELSEIF RESULT == 3
	PRINTL ＜腐爛豬・背後位肛交＞
	SELECTCOM = 27
	CALL COM27
	;死鬥場収入
	TFLAG:402 += (LOSEBASE:0 * 4) + RAND:RESULT
ELSEIF RESULT == 999
	PRINTFORMW %SAVESTR:MASTER%讓腐爛豬退下了……
	RETURN 0
ELSE
	GOTO INPUT_LOOP_0
ENDIF

;-------------------------------------------------
;射精チェック
;獸姦コマンドの改編です。
;-------------------------------------------------
SIF MAXBASE:MASTER:4 == 0
	GOTO END_EJAC

B = 0

;ABL:技巧をみる
IF ABL:12 == 0
	B = 450
ELSEIF ABL:12 == 1
	B = 1000
ELSEIF ABL:12 == 2
	B = 1600
ELSEIF ABL:12 == 3
	B = 2200
ELSEIF ABL:12 == 4
	B = 2700
ELSE
	B = 3200
ENDIF

;ABL:順從をみる
IF ABL:10 == 0
	TIMES B , 0.30
ELSEIF ABL:10 == 1
	TIMES B , 0.50
ELSEIF ABL:10 == 2
	TIMES B , 0.70
ELSEIF ABL:10 == 3
	TIMES B , 1.00
ELSEIF ABL:10 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES B , 1.00
ELSEIF PALAM:5 < PALAMLV:2
	TIMES B , 1.10
ELSEIF PALAM:5 < PALAMLV:3
	TIMES B , 1.20
ELSEIF PALAM:5 < PALAMLV:4
	TIMES B , 1.30
ELSEIF PALAM:5 < PALAMLV:5
	TIMES B , 1.40
ELSE
	TIMES B , 1.50
ENDIF

;キス
IF SELECTCOM == 6
	B = 0
;背後位
ELSEIF SELECTCOM == 21
	TIMES B , 1.00
;背後位肛交
ELSEIF SELECTCOM == 27
	TIMES B , 1.50
;手淫
ELSEIF SELECTCOM == 30
	TIMES B , 0.80
;口交
ELSEIF SELECTCOM == 31
	TIMES B , 1.20
;騎乘位
ELSEIF SELECTCOM == 34
	TIMES B , 1.50
ELSE
	B = 0
ENDIF

BASE:MASTER:4 += B

S = BASE:MASTER:4
EJAC = MAXBASE:MASTER:4

IF  S > EJAC * 2
	E = 2
ELSEIF S > EJAC
	E = 1
ELSE
	E = 0
ENDIF

IF E
;射精している
	TIMES SOURCE:4 , 3.00

	;ABL:精液中毒をみる
	IF ABL:32 == 0
		SOURCE:7 = 0
		TIMES SOURCE:5 , 2.00
		TIMES SOURCE:13, 2.00
	ELSEIF ABL:32 == 1
		SOURCE:7 = 200
		TIMES SOURCE:5 , 2.50
		TIMES SOURCE:13, 1.60
	ELSEIF ABL:32 == 2
		SOURCE:7 = 500
		TIMES SOURCE:5 , 3.00
		TIMES SOURCE:13, 1.00
	ELSEIF ABL:32 == 3
		SOURCE:7 = 1200
		TIMES SOURCE:5 , 4.50
		TIMES SOURCE:13, 0.70
	ELSEIF ABL:32 == 4
		SOURCE:7 = 2500
		TIMES SOURCE:5 , 6.00
		TIMES SOURCE:13, 0.40
	ELSE
		SOURCE:7 = 5000
		TIMES SOURCE:5 , 8.00
		TIMES SOURCE:13, 0.10
	ENDIF
ENDIF

;大量射精
IF E == 2
	EXP:20 += 3
	PRINTL 怪物大量射精
	PRINTL 精液經驗＋３

	BASE:MASTER:4 -= EJAC*2
	SIF BASE:MASTER:4 >= EJAC
		BASE:MASTER:4 = EJAC-1
	;私處內射精フラグ（怪物）
	SIF SELECTCOM == 21 || SELECTCOM == 34
		TFLAG:38 = 2
	;口交で射精フラグ
	SIF SELECTCOM == 31
		TFLAG:0 = 2
	;セックスで射精フラグ
	SIF SELECTCOM == 21 || SELECTCOM == 27
		TFLAG:2 = 2
;通常の射精
ELSEIF E == 1
	EXP:20 += 1
	PRINTL 怪物射精
	PRINTL 精液經驗＋１

	BASE:MASTER:4 -= EJAC
	SIF BASE:MASTER:4 >= EJAC
		BASE:MASTER:4 = EJAC-1
	;私處內射精フラグ（怪物）
	SIF SELECTCOM == 21 || SELECTCOM == 34
		TFLAG:38 = 1
	;口交で射精フラグ
	SIF SELECTCOM == 31
		TFLAG:0 = 1
	;セックスで射精フラグ
	SIF SELECTCOM == 21 || SELECTCOM == 27
		TFLAG:2 = 1
ENDIF

$END_EJAC

;-------------------------------------------------
;汚れ
;-------------------------------------------------
SIF SELECTCOM == 21
	STAIN:3 |= 2
SIF SELECTCOM == 27
	STAIN:4 |= 2
SIF SELECTCOM == 30
	STAIN:1 |= 2
SIF SELECTCOM == 31
	STAIN:0 |= 2
SIF SELECTCOM == 37
	STAIN:0 |= 8
SIF SELECTCOM == 21 && E > 0
	STAIN:3 |= 4
SIF SELECTCOM == 27 && E > 0
	STAIN:4 |= 4
SIF SELECTCOM == 30 && E > 0
	STAIN:1 |= 4
SIF SELECTCOM == 31 && E > 0
	STAIN:0 |= 4

;死鬥場怪物が射精フラグ
TFLAG:15 = E

RETURN 1
;
