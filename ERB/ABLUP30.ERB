PRINTV GET_ABLUP_STATE(J)
PRINTL 
PRINTFORML 　　　%PALAMNAME:6%點數×{JUEL:6}/{B * 3}
PRINTFORML 　　　%EXPNAME:5%　{EXP:5}/{C / 2}

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 未滿足條件
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:30 += 1
IF RESULT == 0
	JUEL:5 -= A
	JUEL:6 -= B
ELSEIF RESULT == 1
	JUEL:5 -= A*3
	JUEL:6 -= B*3
ENDIF

PRINTFORML %ABLNAME:30%變為LV{ABL:30}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP30
;-------------------------------------------------
ABL:30 ++

IF I == 0
	JUEL:5 -= A
	JUEL:6 -= B
ELSEIF J == 0
	JUEL:5 -= A*3
	JUEL:6 -= B*3
ENDIF


