;-------------------------------------------------
;性交技術のLvUP
;-------------------------------------------------
@ABLUP14
#DIM TEMP
TEMP = ABL:14
DRAWLINE
;PRINTL 奴隸的性交技術提升了。
;PRINTL 性交技術越高，性愛時越容易滿足對方。
;CUSTOMDRAWLINE ‥
;性交技術の上限は10
IF ABL:14 >= 10
	PRINTW 已達最高級
	RETURN 0
;侍奉技術＋性交技術は11以上にならない
;でも、珠が沢山あるの場合はレベルアップできる。
ELSEIF ABL:13 + ABL:14 >= 10
	SIF ABL:14 < ABL:13
		TEMP = ABL:13
	IF JUEL:7 < TEMP * TEMP * 500
	PRINTFORML 侍奉技術({ABL:13})＋性交技術({ABL:14})上限為10
	PRINTFORMW %PALAMNAME:7%點數至少達到{TEMP * TEMP * 500}點、方可突破技術等級限制
	RETURN 0
	ENDIF
ENDIF

;必要な習得點數
A = 0
;必要な性交經驗
B = 0

;條件別にＯＫかダメかを記録する
;習得點數による可否（I=0:可、I&1:點數不足、I&2:経験不足）
I = 0

CALL DECIDE_ABLUP14

;Lv5までは技巧が性交技術+1Lvでないといけない
SIF ABL:14 < 5
	PRINTFORML %ABLNAME:12%LV{ABL:14 + 1}以上(現在LV{ABL:12})且

PRINTFORM [0] - %PALAMNAME:7%點數×{JUEL:7}/{A} ……
PRINTV GET_ABLUP_STATE(I)
PRINTL 
PRINTFORML       %EXPNAME:5%　{EXP:5}/{B}

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:14 += 1
SIF RESULT == 0
	JUEL:7 -= A

PRINTFORML %ABLNAME:14%變為LV{ABL:14}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP14
;-------------------------------------------------
ABL:14 ++

IF I == 0
	JUEL:7 -= A
ENDIF



;--------------------------------------------------
;性交技術のLvUP可否判定
;--------------------------------------------------
@DECIDE_ABLUP14
#DIM TEMP
TEMP = ABL:14
SIF ABL:14 < ABL:13
	TEMP = ABL:13
SIF ABL:13 + ABL:14 >= 10 && JUEL:7 < TEMP * TEMP * 500
	RETURN 0

;判定変數を空に
A = 0
B = 0
I = 0

IF ABL:14 == 0
	A = 1
	B = 3
ELSEIF ABL:14 == 1
	A = 10
	B = 10
ELSEIF ABL:14 == 2
	A = 100
	B = 30
ELSEIF ABL:14 == 3
	A = 1500
	B = 80
ELSEIF ABL:14 == 4
	A = 4000
	B = 100
ELSEIF ABL:14 == 5
	A = 5000
	B = 130
ELSEIF ABL:14 == 6
	A = 6500
	B = 160
ELSEIF ABL:14 == 7
	A = 8000
	B = 200
ELSEIF ABL:14 == 8
	A = 10000
	B = 250
ELSEIF ABL:14 == 9
	A = 15000
	B = 300
ENDIF

SIF ABL:13 + ABL:14 >= 10
	A = TEMP * TEMP * 500

;戒備森嚴
IF TALENT:27
	IF ABL:14 == 3
		TIMES A , 1.50
		TIMES B , 1.50
	ELSEIF ABL:14 == 4
		TIMES A , 2.00
		TIMES B , 2.00
	ELSEIF ABL:14 == 5
		TIMES A , 2.50
		TIMES B , 2.50
	ELSEIF ABL:14 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
	ENDIF
ENDIF

;坦率
IF TALENT:13
	TIMES A , 0.90
	TIMES B , 0.95
ENDIF
;冷漠
IF TALENT:21
	TIMES A , 1.10
	TIMES B , 1.05
ENDIF
;感情淡薄
IF TALENT:22
	TIMES A , 1.10
	TIMES B , 1.05
ENDIF
;好奇心
IF TALENT:23
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.20
	TIMES B , 1.10
ENDIF

;壓抑
IF TALENT:32
	TIMES A , 1.10
	TIMES B , 1.05
;開放
ELSEIF TALENT:33
	TIMES A , 0.90
	TIMES B , 0.95
ENDIF

;抵抗
IF TALENT:34
	TIMES A , 1.20
	TIMES B , 1.10
ENDIF

;害羞
IF TALENT:35
	TIMES A , 1.10
	TIMES B , 1.05
;不知羞恥
ELSEIF TALENT:36
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;快速學習
IF TALENT:50
	TIMES A , 0.80
	TIMES B , 0.80
;學習緩慢
ELSEIF TALENT:51
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF

;獻身的
IF TALENT:63
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF
;不怕臟
IF TALENT:64
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;性交中毒
IF ABL:30 < 3
	TIMES A , 1.00
	TIMES B , 1.00
ELSEIF ABL:30 < 6
	TIMES A , 0.95
	TIMES B , 0.95
ELSEIF ABL:30 < 8
	TIMES A , 0.90
	TIMES B , 0.90
ELSEIF ABL:30 < 10
	TIMES A , 0.85
	TIMES B , 0.85
ELSE
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF

;最低でも1回・1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1

;習得點數は足りている？
SIF JUEL:7 < A
	I |= 1
;性交經驗が必要
SIF EXP:5 < B
	I |= 2
;Lv4までは技巧が必要
SIF ABL:12 < 5 && ABL:12 < ABL:14 + 1
	I |= 4

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
