SIF GROOM_TYPE == 2 || GROOM_TYPE == 3 || GROOM_TYPE == 4
	VIRGIN_B = RAND:9

IF GROOM_TYPE == 1000 
;同じ女性の場合
	IF (TALENT:CHARA:122 == 0 && TALENT:CHARA:121 == 0) && (TALENT:ARG:122 == 0 && TALENT:ARG:121 == 0)
