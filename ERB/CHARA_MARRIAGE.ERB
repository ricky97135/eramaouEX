		ENDIF
	ELSEIF CFLAG:ARG:601 == 900
		CFLAG:ARG:16 = 998
	ELSEIF CFLAG:ARG:601 == 5
		CFLAG:ARG:16 = 999
	;戀人初吻	
	;ELSEIF CFLAG:ARG:601 == 902
		;CFLAG:ARG:16 = 992
        ;CSTR:ARG:4 = NAME_LOVER,CFLAG:ARG:606,1
	ELSE
		CFLAG:ARG:16 = 994
	ENDIF
ENDIF

;リターン１でターンエンドする
RETURN 1

