;==================================================
; 滿月角色基礎數值調整
; CALLBY @WEAPON_RESTORE
@FULLMOON_EFFECT
;--------------------------------------------------

IF TALENT:A:220 == 0
	GOTO LABEL_種族
ELSE
	GOTO LABEL_種族2
ENDIF

$LABEL_種族
SELECTCASE TALENT:A:種族
	CASE 0
		;人類
	CASE 1
		;精靈
	CASE 2
		;狼人
		CFLAG:A:11 *= 10
		CFLAG:A:12 *= 10
		BASE:A:0 = MAXBASE:A:0
		BASE:A:1 = MAXBASE:A:1
	CASE 3
		;吸血鬼
		CFLAG:A:11 = MAX(CFLAG:A:11, CFLAG:A:13)
		CFLAG:A:12 = MAX(CFLAG:A:12, CFLAG:A:14)
		BASE:A:0 = MAXBASE:A:0 * 10
		BASE:A:1 = MAXBASE:A:1 * 10
	CASE 4
		;無頭騎士
	CASE 5
		;龍族
	CASE 6
		;天使
		BASE:A:1 /= 2
	CASE 7
		;暗精靈
		CFLAG:A:11 *= 2
		BASE:A:0 = MAXBASE:A:0
		BASE:A:1 = MAXBASE:A:1
	CASE 8
		;墮天使
		CFLAG:A:11 *= 2
	CASE 9
		;魔族
		CFLAG:A:11 *= 2
	CASE 10
		;霍位元人
	CASE 11
		;矮人
ENDSELECT

RETURN

$LABEL_種族2

SELECTCASE TALENT:A:種族2
	; CASE 1
		;獸人
	; CASE 2
		;史萊姆
	; CASE 3
		;昆蟲
	CASE 4
		;植物
		CFLAG:A:11 *= 2
		BASE:A:0 = MAXBASE:A:0
		BASE:A:1 = MAXBASE:A:1
	CASE 5, 11
		;觸手
		CFLAG:A:11 *= 5
		BASE:A:0 = MAXBASE:A:0
		BASE:A:1 = MAXBASE:A:1
	CASE 6
		;妖精
		CFLAG:A:11 *= 2
		BASE:A:0 = MAXBASE:A:0 *2
		BASE:A:1 = MAXBASE:A:1 *2
	; CASE 7
		;巨人
	; CASE 8,9
		;魔族
	; CASE 10, 12
		;魔獸
	CASEELSE
		CFLAG:A:11 *= 2
		BASE:A:1 = MAXBASE:A:1
ENDSELECT
