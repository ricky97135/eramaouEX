	TIMES E , 3.00
ENDIF

;容易陷落
IF TALENT:73
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
	TIMES D , 0.75
	TIMES E , 0.75
ENDIF

;施虐狂
IF TALENT:83
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.50
ENDIF

;愛慕
IF TALENT:85
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
	TIMES D , 0.75
ENDIF

;盲從
IF TALENT:86
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
