;侍奉精神のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化

;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;侍奉精神のLvUP
;-------------------------------------------------
@ABLUP16
DRAWLINE
;PRINTL 奴隸的侍奉精神提升了。
;PRINTL 侍奉精神越高，越容易在侍奉中獲得快感。
;CUSTOMDRAWLINE ‥
;侍奉精神はLv5が上限
;[愛慕][盲從][獻身的]が付いている場合はLv10まで開放
IF ABL:16 >= 5 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	PRINTW 需要特殊素質才能繼續提升
	RETURN 0
ELSEIF ABL:16 >= 10
	PRINTW 已達最高級
	RETURN 0
ENDIF

;必要な屈服點數
A = 0
;必要な恭順點數
B = 0
;必要な習得點數
C = 0
;必要な侍奉快樂經驗回數
D = 0
;必要な絕頂經驗＆精液經驗回數
E = 0
;必要な異常經驗回數
F = 0

;條件別にＯＫかダメかを記録する
;屈服點數による可否（I=0:可、I&1:點數不足、I&2:経験不足、I&4:能力不足）
I = 0
;恭順點數による可否（J=0:可、J&1:點數不足、J&2:経験不足、J&4:能力不足、J=256:そのレベルでは自動不可）
J = 0
;習得點數による可否（K=0:可、K&1:點數不足、K&2:経験不足、K&4:能力不足、K=256:そのレベルでは自動不可）
K = 0

CALL DECIDE_ABLUP16

;順從が侍奉精神＋１レベルでないといけない
PRINTFORML %ABLNAME:10%LV{ABL:16+1}以上(現在LV{ABL:10})且

;ＬＶ３から４、４から５に上げるときは異常經驗必要（素質：[盲從]なら無視できる）
SIF F > 0
	PRINTFORML %EXPNAME:50%{F}以上(現在{EXP:50})且

;屈服點數で上げる
PRINTFORM [0] - %PALAMNAME:6%點數×{JUEL:6}/{A} ……
PRINTV GET_ABLUP_STATE(I)
PRINTL 
IF E > 0
	PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/{E}
	PRINTFORML 　　　%EXPNAME:20%　{EXP:20}/{E}
ENDIF

IF B > 0
	;恭順點數で上げる
	PRINTFORM [1] - %PALAMNAME:4%點數×{JUEL:4}/{B} ……
	PRINTV GET_ABLUP_STATE(J)
	PRINTL 
	SIF D > 0
		PRINTFORML 　　　%EXPNAME:21%　{EXP:21}/{D}
ENDIF

IF C > 0
	;習得點數で上げる
	PRINTFORM [2] - %PALAMNAME:7%點數×{JUEL:7}/{C} ……
	PRINTV GET_ABLUP_STATE(K)
	PRINTL 
	PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/1
ENDIF

PRINTL [100] - 停止

$INPUT_LOOP
INPUT
IF (RESULT < 0 || RESULT > 2) && RESULT != 100
	GOTO INPUT_LOOP
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	GOTO INPUT_LOOP
ELSEIF J == 256 && RESULT == 1
	GOTO INPUT_LOOP
ELSEIF J != 0 && RESULT == 1
	PRINTL 未滿足條件
	GOTO INPUT_LOOP
ELSEIF K == 256 && RESULT == 2
	GOTO INPUT_LOOP
ELSEIF K != 0 && RESULT == 2
	PRINTL 未滿足條件
	GOTO INPUT_LOOP
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:16 += 1

IF RESULT == 0
	JUEL:6 -= A
ELSEIF RESULT == 1
	JUEL:4 -= B
ELSEIF RESULT == 2
	JUEL:7 -= C
ENDIF

PRINTFORML %ABLNAME:16%變為LV{ABL:16}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP16
;-------------------------------------------------
ABL:16 ++

IF I == 0
	JUEL:6 -= A
ELSEIF J == 0
	JUEL:4 -= B
ELSEIF K == 0
	JUEL:7 -= C
ENDIF



;-------------------------------------------------
;侍奉精神のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP16
SIF ABL:16 >= 10
	RETURN 0
SIF ABL:16 >= 5 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	RETURN 0

;判定変數を空に
I = 0
J = 0
K = 0

A = 0
B = 0
C = 0
D = 0
E = 0
F = 0



IF ABL:16 == 0
	A = 100
	B = 20
	C = 100
	D = 1
	E = 1
ELSEIF ABL:16 == 1
	A = 1200
	B = 400
	C = 2000
	D = 1
	E = 3
ELSEIF ABL:16 == 2
	A = 5000
	B = 2000
	C = 10000
	D = 20
	E = 6
ELSEIF ABL:16 == 3
	A = 10000
	B = 3000
	C = 0
	D = 20
	E = 10
ELSEIF ABL:16 == 4
	A = 30000
	B = 10000
	C = 0
	D = 100
	E = 20
ELSEIF ABL:16 == 5
	A = 50000
	B = 20000
	C = 0
	D = 200
	E = 80
ELSEIF ABL:16 == 6
	A = 70000
	B = 30000
	C = 0
	D = 350
	E = 150
ELSEIF ABL:16 == 7
	A = 100000
	B = 50000
	C = 0
	D = 500
	E = 200
ELSEIF ABL:16 == 8
	A = 150000
	B = 80000
	C = 0
	D = 700
	E = 400
ELSEIF ABL:16 == 9
	A = 200000
	B = 150000
	C = 0
	D = 1000
	E = 800
ENDIF

;戒備森嚴
IF TALENT:27
	IF ABL:16 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES D , 1.50
		TIMES E , 1.50
	ELSEIF ABL:16 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
	ELSEIF ABL:16 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES D , 2.50
		TIMES E , 2.50
	ELSEIF ABL:16 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
	ENDIF
ENDIF

;ＬＶ３以上に上げるときは異常經驗必要（素質：[獻身的][愛慕][盲從]なら無視できる）
IF ABL:16 >= 3 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	F = ABL:16 - 2
ENDIF

;反抗心
IF TALENT:11
	TIMES A , 1.20
	TIMES B , 1.40
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;剛強
IF TALENT:12
	TIMES A , 1.20
	TIMES D , 1.20
ENDIF

;坦率
IF TALENT:13
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.70
ENDIF

;囂張
IF TALENT:16
	TIMES A , 1.10
	TIMES B , 1.10
ENDIF

;高姿態
IF TALENT:15
	TIMES A , 1.40
	TIMES B , 1.30
	TIMES D , 1.20
	TIMES E , 1.20
;低姿態
ELSEIF TALENT:17
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF

;克制
IF TALENT:20
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;冷漠
IF TALENT:21
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES D , 1.20
	TIMES E , 1.10
ENDIF

;感情淡薄
IF TALENT:22
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.40
	TIMES E , 1.20
ENDIF

;保守的
IF TALENT:24
	TIMES A , 1.30
	TIMES B , 1.30
	TIMES C , 1.30
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;樂觀的
IF TALENT:25
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES D , 0.70
	TIMES E , 0.75
;悲觀的
ELSEIF TALENT:26
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF

;愛表現
IF TALENT:28
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
	TIMES D , 0.90
ENDIF

;壓抑
IF TALENT:32
	TIMES A , 1.10
	TIMES B , 1.10
