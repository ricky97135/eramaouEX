;百合中毒のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;百合中毒のLvUP
;-------------------------------------------------
@ABLUP33
;男人だとダメ
SIF TALENT:122
	RETURN 0
DRAWLINE
;PRINTL 奴隸的百合成癮加深了。
;PRINTL 百合中毒越高，越容易在百合行為中感到滿足，
;PRINTL 只有頻繁而激烈的百合，能安撫她那躁動的心。
;CUSTOMDRAWLINE ‥
;百合中毒はLv5が上限
;[淫亂][雙性戀][倒錯的][討厭男人]が付いている場合はLv10まで開放
IF ABL:33 >= 5 && (TALENT:76 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0)
	PRINTW 需要特殊素質才能繼續提升
	RETURN 0
ELSEIF ABL:33 >= 10
	PRINTW 已達最高級
	RETURN 0
;精液中毒＋百合中毒＋獸姦中毒は11以上にならない
;でも、珠が沢山あるの場合はレベルアップできる。
ELSEIF ABL:32 + ABL:33 + ABL:39 >= 10
	IF JUEL:5 < ABL:33 * ABL:33 * 4000 || JUEL:6 < ABL:33 * ABL:33 * 4000 || JUEL:0 < ABL:33 * ABL:33 * 10000
	PRINTFORML 精液中毒({ABL:32})＋百合中毒({ABL:33})＋獸姦中毒({ABL:39})上限為10
	PRINTFORML 至少達成%PALAMNAME:5%點數{ABL:33 * ABL:33 * 4000}點、%PALAMNAME:6%點數{ABL:33 * ABL:33 * 4000}點或%PALAMNAME:0%點數{ABL:33 * ABL:33 * 10000}點的其中一項
	PRINTFORMW 方可提升目前百合中毒的等級
	RETURN 0
	ENDIF
ENDIF

;必要な欲情・屈服點數
A = 0
;必要な陰核點數
B = 0
;必要な百合經驗回數
C = 0
;必要な異常經驗回數
D = 0

;條件別にＯＫかダメかを記録する
I = 0

CALL DECIDE_ABLUP33

;ＬＶ２以上に上げるときは異常經驗必要（素質：[倒錯的][雙性戀][討厭男人][容易上癮][瘋狂]なら無視できる）
SIF D > 0
	PRINTFORML %EXPNAME:50%{D}以上(現在{EXP:50})且

;百合氣質が百合中毒＋１レベルでないといけない
PRINTFORML %ABLNAME:22%LV{ABL:33 + 1}以上(現在LV{ABL:22})且

PRINTFORM [0] - %PALAMNAME:0%點數×{JUEL:0}/{B} ……
PRINTV GET_ABLUP_STATE(I)
PRINTL 
PRINTFORML 　　　%PALAMNAME:5%點數×{JUEL:5}/{A}
PRINTFORML 　　　%PALAMNAME:6%點數×{JUEL:6}/{A}
PRINTFORML 　　　%EXPNAME:40%　{EXP:40}/{C}

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:33 += 1

IF RESULT == 0
	JUEL:0 -= B
	JUEL:5 -= A
	JUEL:6 -= A
ENDIF

PRINTFORML %ABLNAME:33%變為LV{ABL:33}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP33
;-------------------------------------------------
ABL:33 ++

IF I == 0
	JUEL:0 -= B
	JUEL:5 -= A
	JUEL:6 -= A
ENDIF


;-------------------------------------------------
;百合中毒のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP33
;男人だとダメ
SIF TALENT:122
	RETURN 0
;百合中毒はLv5が上限
;[淫亂][雙性戀][倒錯的][討厭男人]が付いている場合はLv10まで開放
SIF ABL:33 >= 10
	RETURN 0
SIF ABL:33 >= 5 && (TALENT:76 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0)
	RETURN 0
;精液中毒＋百合中毒＋獸姦中毒は11以上にならない
SIF ABL:32 + ABL:33 + ABL:39 >= 30
	RETURN 0

;判定変數を空に
I = 0

A = 0
B = 0
C = 0
D = 0

IF ABL:33 == 0
	A = 1200
	B = 5000
	C = 300
ELSEIF ABL:33 == 1
	A = 3900
	B = 15000
	C = 600
ELSEIF ABL:33 == 2
	A = 6000
	B = 23000
	C = 1000
ELSEIF ABL:33 == 3
	A = 18000
	B = 50000
	C = 1400
ELSEIF ABL:33 == 4
	A = 30000
	B = 70000
	C = 2100
ELSEIF ABL:33 == 5
	A = 55000
	B = 120000
	C = 3000
ELSEIF ABL:33 == 6
	A = 70000
	B = 200000
	C = 4000
ELSEIF ABL:33 == 7
	A = 100000
	B = 350000
	C = 5200
ELSEIF ABL:33 == 8
	A = 150000
	B = 500000
	C = 6500
ELSEIF ABL:33 == 9
	A = 300000
	B = 800000
	C = 8000
ENDIF

IF ABL:32 + ABL:33 + ABL:39 >= 10
	A = ABL:33 * ABL:33 * 4000
	B = ABL:33 * ABL:33 * 10000	
ENDIF

;戒備森嚴
IF TALENT:27
	IF ABL:33 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES C , 1.50
	ELSEIF ABL:33 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:33 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:33 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

;ＬＶ２以上に上げるときは異常經驗必要（素質：[容易上癮][倒錯的][討厭男人][雙性戀][瘋狂]なら無視できる）
SIF ABL:33 >= 2 && ( TALENT:72 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0 &&TALENT:123 == 0)
	D = ABL:33 - 1

;反抗心
IF TALENT:11
	TIMES A , 1.50
	TIMES B , 1.50
	TIMES C , 1.50
ENDIF
;克制
IF TALENT:20
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF
;冷漠
IF TALENT:21
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.50
	TIMES B , 1.50
	TIMES C , 1.50
ENDIF

;壓抑
IF TALENT:32
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
;開放
ELSEIF TALENT:33
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;抵抗
IF TALENT:34
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
ENDIF
;擅用舌頭
IF TALENT:52
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF
;不怕污臭
IF TALENT:61
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
ENDIF
;獻身的
IF TALENT:63
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF
;不怕臟
IF TALENT:64
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
ENDIF

;接受快感
IF TALENT:70
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
;否定快感
ELSEIF TALENT:71
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES C , 1.10
ENDIF
;容易上癮
IF TALENT:72
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;容易陷落
IF TALENT:73
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;淫亂
IF TALENT:76
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF

;男人婆
IF TALENT:79
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF
;雙性戀
IF TALENT:81
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;討厭男人
IF TALENT:82
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;小惡魔
IF TALENT:87
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF
;瘋狂
IF TALENT:123
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;崩壞
IF TALENT:9
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;最低でも1回・1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;異常經驗が不足
IF D > EXP:50
		I |= 2
		J |= 2
ENDIF

;百合氣質が百合中毒＋１レベルでないと能力不足
IF ABL:22 < ABL:33 + 1
	I |= 4
	J |= 4
ENDIF

;陰核點數が不足
SIF JUEL:0 < B
	I |= 1
;欲情點數が不足
SIF JUEL:5 < A
	I |= 1
;屈服點數が不足
SIF JUEL:6 < A
	I |= 1
;百合經驗が不足
SIF EXP:40 < C
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
