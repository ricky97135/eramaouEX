;露出癖のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化

;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;露出癖のLvUP
;-------------------------------------------------
@ABLUP17
DRAWLINE
;PRINTL 奴隸的露出癖提升了。
;PRINTL 露出癖越高，越容易在恥辱及屈辱的行為中獲得快感。
;CUSTOMDRAWLINE ‥
;露出癖はLv5が上限
;[坦率][開放][愛表現][露出狂]が付いている場合はLv10まで開放
IF ABL:17 >= 5 && (TALENT:13 == 0 && TALENT:33 == 0 && TALENT:28 == 0 && TALENT:89 == 0)
	PRINTW 需要特殊素質才能繼續提升
	RETURN 0
ELSEIF ABL:17 >= 10
	PRINTW 已達最高級
	RETURN 0
ENDIF

;必要な恥情點數
A = 0
;必要な異常經驗回數
B = 0
;必要な絕頂經驗回數
C = 0
;必要な調教自慰經驗回數
D = 0

;條件別にＯＫかダメかを記録する
;恥情點數による可否（I=0:可、I&1:點數不足、I&2:経験不足）
I = 0

CALL DECIDE_ABLUP17

;慾望が露出癖＋１レベルでないといけない（[愛慕]がない場合）
IF TALENT:85 == 0
	PRINTFORM %ABLNAME:11%LV{ABL:17+1}以上(現在LV{ABL:11})且
	PRINTL 
ELSEIF TALENT:85 == 1
;順從が露出癖＋１レベルでないといけない（[愛慕]がある場合）
	PRINTFORM %ABLNAME:10%LV{ABL:17+1}以上(現在LV{ABL:10})且
	PRINTL
ENDIF

;異常經驗が必要か
SIF B > 0
	PRINTFORML %EXPNAME:50%{B}以上(現在{EXP:50})且

PRINTFORM [0] - %PALAMNAME:8%點數×{JUEL:8}/{A} ……
PRINTV GET_ABLUP_STATE(I)
PRINTL 
;絕頂經驗
SIF C > 0
	PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/{C}
;調教自慰經驗
SIF D > 0
	PRINTFORML 　　　%EXPNAME:11%　{EXP:11}/{D}

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件。
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:17 += 1

IF RESULT == 0
	JUEL:8 -= A
ENDIF

PRINTFORML %ABLNAME:17%變為LV{ABL:17}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP17
;-------------------------------------------------
ABL:17 ++

IF I == 0
	JUEL:8 -= A
ENDIF


;-------------------------------------------------
;露出癖のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP17
SIF ABL:17 >= 10
	RETURN 0
SIF ABL:17 >= 5 && (TALENT:13 == 0 && TALENT:33 == 0 && TALENT:28 == 0 && TALENT:89 == 0)
	RETURN 0

;判定変數を空に
A = 0
B = 0
C = 0
D = 0
I = 0
J = 0

IF ABL:17 == 0
	A = 100
	C = 1
ELSEIF ABL:17 == 1
	A = 1000
	D = 1
ELSEIF ABL:17 == 2
	A = 3000
ELSEIF ABL:17 == 3
	A = 6000
ELSEIF ABL:17 == 4
	A = 12000
ELSEIF ABL:17 == 5
	A = 25000
ELSEIF ABL:17 == 6
	A = 50000
ELSEIF ABL:17 == 7
	A = 80000
ELSEIF ABL:17 == 8
	A = 120000
ELSEIF ABL:17 == 9
	A = 150000
ENDIF

;戒備森嚴
IF TALENT:27
	SIF ABL:17 == 3
		TIMES A , 1.50
	SIF ABL:17 == 4
		TIMES A , 2.00
	SIF ABL:17 == 5
		TIMES A , 2.50
	SIF ABL:17 >= 6
		TIMES A , 3.00
ENDIF

;ＬＶ３以上に上げるときは異常經驗必要（素質：[愛表現][開放][淫亂][倒錯的][受虐狂][瘋狂]なら無視できる）
IF ABL:17 >= 3 && (TALENT:28 == 0 && TALENT:33 == 0 && TALENT:76 == 0 && TALENT:80 == 0 && TALENT:88 == 0 && TALENT:123 == 0)
	B = ABL:17 - 2
ENDIF

;崩壞
SIF TALENT:9
	TIMES A , 0.80
;膽怯
SIF TALENT:10
	TIMES A , 1.20
;反抗心
SIF TALENT:11
	TIMES A , 1.50
;剛強
SIF TALENT:12
	TIMES A , 1.10
;囂張
SIF TALENT:16
	TIMES A , 1.10
;克制
SIF TALENT:20
	TIMES A , 1.10
;冷漠
SIF TALENT:21
	TIMES A , 1.10
;感情淡薄
SIF TALENT:22
	TIMES A , 1.50
;愛表現
SIF TALENT:28
	TIMES A , 0.50
;看重貞操
SIF TALENT:30
	TIMES A , 1.20
;看輕貞操
SIF TALENT:31
	TIMES A , 0.90

;壓抑
IF TALENT:32
	TIMES A , 1.20
;開放
ELSEIF TALENT:33
	TIMES A , 0.80
ENDIF

;抵抗
SIF TALENT:34
	TIMES A , 1.50

;害羞
IF TALENT:35
	TIMES A , 1.10
;不知羞恥
ELSEIF TALENT:36
	TIMES A , 0.90
ENDIF

;把柄
SIF TALENT:37
	TIMES A , 0.80

;容易自慰
SIF TALENT:60
	TIMES A , 0.90

;接受快感
IF TALENT:70
	TIMES A , 0.90
;否定快感
ELSEIF TALENT:71
	TIMES A , 1.20
ENDIF

;容易上癮
SIF TALENT:72
	TIMES A , 0.90
;容易陷落
SIF TALENT:73
	TIMES A , 0.50
;淫亂
SIF TALENT:76
	TIMES A , 0.80
;倒錯的
SIF TALENT:80
	TIMES A , 0.75
;施虐狂
SIF TALENT:83
	TIMES A , 1.20
;受虐狂
SIF TALENT:88
	TIMES A , 0.75
;瘋狂
SIF TALENT:123
	TIMES A , 0.50

;慾望が露出癖＋１レベルでないといけない（[愛慕]がない場合）
IF TALENT:85 == 0
	IF ABL:11 < ABL:17+1
		;慾望が不足
		I |= 4
	ENDIF
ELSEIF TALENT:85 == 1
;順從が露出癖＋１レベルでないといけない（[愛慕]がある場合）
	IF ABL:10 < ABL:17+1
		;順從が不足
		I |= 4
	ENDIF
ENDIF

;最低でも1個は必要
SIF A < 1
	A = 1

;異常經驗が不足
SIF EXP:50 < B
	I |= 2
;絕頂經驗が不足
SIF EXP:2 < C
	I |= 2
;調教自慰經驗が不足
SIF EXP:11 < D
	I |= 2

;恥情點數は足りている？
SIF JUEL:8 < A
	I |= 1

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

