	TIMES B , 0.95
	TIMES C , 0.95
ENDIF
;囂張
IF TALENT:16
	TIMES A , 1.25
	TIMES B , 1.15
	TIMES C , 1.15
ENDIF
;高姿態
IF TALENT:15
