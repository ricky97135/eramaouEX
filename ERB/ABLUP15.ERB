	TIMES B , 0.95
	TIMES C , 0.95
ENDIF

;快速學習
IF TALENT:50
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
;學習緩慢
ELSEIF TALENT:51
	TIMES A , 1.20
	TIMES B , 1.10
	TIMES C , 1.10
ENDIF

;謎之魅力
IF TALENT:92
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF
;小惡魔
IF TALENT:87
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
ENDIF
;巧言
IF TALENT:182
	TIMES A , 0.60
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;最低でも1回・1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;習得點數は足りている？
SIF JUEL:7 < A
	I |= 1
;調教會話經驗か賣淫經驗は足りている？
SIF EXP:73 < B && EXP:74 < C
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
