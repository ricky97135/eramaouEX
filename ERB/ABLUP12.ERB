CALL DECIDE_ABLUP12
SIF NO:TARGET == 0
    PRINTL 魔王通過這種方式提升技巧仍然需要金錢5000點
PRINTFORM [0] - %PALAMNAME:7%點數×{JUEL:7}/{A} ……

IF I == 0
	PRINT ＯＫ
ELSE
	SIF I & 1
		PRINT 點數不足 
	SIF I & 2
		PRINT 經驗不足
	SIF I & 4
		PRINT 金錢不足	
ENDIF
PRINTL 

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:12 += 1
IF NO:TARGET == 0
    MONEY -= 5000
	EX_FLAG:4444 -= 5000
	PRINTL 花費金錢5000點。
ENDIF	

IF RESULT == 0
	JUEL:7 -= A
ENDIF

PRINTFORML %ABLNAME:12%變為LV{ABL:12}。

