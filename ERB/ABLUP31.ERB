;自慰中毒のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化
;eraIm@s_ver.0.17βdのスクリプトを參考に修正
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;自慰中毒のLvUP
;-------------------------------------------------
@ABLUP31
DRAWLINE
;PRINTL 奴隸的自慰成癮加深了。
;PRINTL 自慰中毒越高，越容易在自慰中感到滿足，
;PRINTL 只有頻繁而激烈的自慰，能安撫她那躁動的心。
;CUSTOMDRAWLINE ‥
;自慰中毒はLv5が上限
;[愛慕][淫亂][容易自慰][接受快感][自慰狂][淫乳]が付いている場合はLv10まで開放
IF ABL:31 >= 5 && (TALENT:85 == 0 && TALENT:76 == 0 && TALENT:60 == 0 && TALENT:70 == 0 && TALENT:74 == 0 && TALENT:78 == 0)
	PRINTW 需要特殊素質才能繼續提升
	RETURN 0
ELSEIF ABL:31 >= 10
	PRINTW 已達最高級
	RETURN 0
;性交中毒＋自慰中毒は11以上にならない
;でも、珠が沢山あるの場合はレベルアップできる。
ELSEIF ABL:30 + ABL:31 >= 10
	IF JUEL:5 < ABL:31 * ABL:31 * 2550 || JUEL:0 < ABL:31 * ABL:31 * 15000 || JUEL:8 < ABL:31 * ABL:31 * 2000
	PRINTFORML 性交中毒({ABL:30})＋自慰中毒({ABL:31})上限為10
	PRINTFORML 至少達成%PALAMNAME:5%點數{ABL:31 * ABL:31 * 2550}點、%PALAMNAME:0%點數{ABL:31 * ABL:31 * 15000}點或%PALAMNAME:8%點數{ABL:31 * ABL:31 * 2000}點的其中一項
	PRINTFORMW 方可提升目前自慰中毒的等級
	RETURN 0
	ENDIF
ENDIF

;必要な欲情點數
A = 0
;必要な陰核點數
B = 0
;必要な恥情點數
C = 0
;必要な自慰經驗回數
D = 0
;必要な調教自慰經驗回數
E = 0
;必要な異常經驗回數
F = 0

;條件別にＯＫかダメかを記録する
;自慰經驗で上げる場合の可否（I=0:可、I&1:點數不足、I&2:経験不足、I&4:能力不足）
I = 0
;調教自慰經驗で上げる場合の可否（I=0:可、I&1:點數不足、I&2:経験不足、I&4:能力不足）
J = 0

CALL DECIDE_ABLUP31

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常經驗必要（素質：[開放][容易自慰][容易上癮][淫亂化]なら無視できる）
SIF F > 0
	PRINTFORML %EXPNAME:50%{F}以上(現在{EXP:50})且

;露出癖が必要
PRINTFORML %ABLNAME:17%LV{ABL:31 + 1}以上(現在LV{ABL:17})且

;陰蒂感覺が必要
PRINTFORML %ABLNAME:0%LV{ABL:31 + 1}以上(現在LV{ABL:0})且

;自慰經驗で上げる場合
PRINTFORM [0] - %PALAMNAME:5%點數×{JUEL:5}/{A} ……
PRINTV GET_ABLUP_STATE(I)
PRINTL 
PRINTFORML 　　　%PALAMNAME:0%點數×{JUEL:0}/{B}
PRINTFORML 　　　%PALAMNAME:8%點數×{JUEL:8}/{C}
PRINTFORML 　　　%EXPNAME:10%　{EXP:10}/{D}

;調教自慰經驗で上げる場合
PRINTFORM [1] - %PALAMNAME:5%點數×{JUEL:5}/{A} ……
PRINTV GET_ABLUP_STATE(J)
PRINTL 
PRINTFORML 　　　%PALAMNAME:0%點數×{JUEL:0}/{B}
PRINTFORML 　　　%PALAMNAME:8%點數×{JUEL:8}/{C}
PRINTFORML 　　　%EXPNAME:11%　{EXP:11}/{E}

PRINTL [100] - 停止

INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 未滿足條件
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 未滿足條件
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:31 += 1

IF RESULT == 0 || RESULT == 1
	JUEL:5 -= A
	JUEL:0 -= B
	JUEL:8 -= C
ENDIF

PRINTFORML %ABLNAME:31%變為LV{ABL:31}。

RETURN 0


;-------------------------------------------------
@CORE_ABLUP31
;-------------------------------------------------
ABL:31 ++

IF I == 0
	JUEL:5 -= A
	JUEL:0 -= B
	JUEL:8 -= C
ELSEIF J == 0
	JUEL:5 -= A
	JUEL:0 -= B
	JUEL:8 -= C
ENDIF


;-------------------------------------------------
;自慰中毒のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP31
;自慰中毒はLv5が上限
;[愛慕][淫亂][容易自慰][接受快感][自慰狂][淫乳]が付いている場合はLv10まで開放
SIF ABL:31 >= 10
	RETURN 0
SIF ABL:31 >= 5 && (TALENT:85 == 0 && TALENT:76 == 0 && TALENT:60 == 0 && TALENT:70 == 0 && TALENT:74 == 0 && TALENT:78 == 0)
	RETURN 0
;性交中毒LV＋自慰中毒LVは10が上限
SIF ABL:30 + ABL:31 >= 20
	RETURN 0

;判定変數を空に
I = 0
J = 0

A = 0
B = 0
C = 0
D = 0
E = 0
F = 0

IF ABL:31 == 0
	A = 3000
	B = 10000
	C = 1000
	D = 100
	E = 20
ELSEIF ABL:31 == 1
	A = 6000
	B = 25000
	C = 3000
	D = 250
	E = 40
ELSEIF ABL:31 == 2
	A = 12000
	B = 50000
	C = 6000
	D = 500
	E = 60
ELSEIF ABL:31 == 3
	A = 20000
	B = 100000
	C = 15000
	D = 1000
	E = 100
ELSEIF ABL:31 == 4
	A = 32000
	B = 200000
	C = 30000
	D = 1500
	E = 150
ELSEIF ABL:31 == 5
	A = 50000
	B = 250000
	C = 40000
	D = 2000
	E = 200
ELSEIF ABL:31 == 6
	A = 70000
	B = 320000
	C = 50000
	D = 3000
	E = 320
ELSEIF ABL:31 == 7
	A = 100000
	B = 500000
	C = 70000
	D = 4000
	E = 500
ELSEIF ABL:31 == 8
	A = 150000
	B = 800000
	C = 100000
	D = 6000
	E = 800
ELSEIF ABL:31 == 9
	A = 200000
	B = 1000000
	C = 150000
	D = 8000
	E = 1000
ENDIF

;戒備森嚴
IF TALENT:27
	IF ABL:31 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES C , 1.50
		TIMES D , 1.50
		TIMES E , 1.50
	ELSEIF ABL:31 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
	ELSEIF ABL:31 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
		TIMES D , 2.50
		TIMES E , 2.50
	ELSEIF ABL:31 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
	ENDIF
ENDIF

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常經驗必要（素質：[開放][容易自慰][淫亂][容易上癮][瘋狂]なら無視できる）
IF ABL:31 == 2 && (TALENT:33 == 0 && TALENT:60 == 0 && TALENT:72 == 0 && TALENT:76 == 0 && TALENT:123 == 0)
	F = ABL:31 - 1
	IF EXP:50 < F
		;異常經驗が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF

;容易自慰
IF TALENT:60
	TIMES A , 0.25
	TIMES B , 0.25
	TIMES C , 0.25
	TIMES D , 0.25
ENDIF

;容易上癮
IF TALENT:72
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
	TIMES D , 0.75
ENDIF

;淫亂化
IF TALENT:76
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF


;異常經驗が不足
IF F > EXP:50
	I |= 2
	J |= 2
ENDIF

;露出癖が自慰中毒＋１レベルでないと能力不足
IF ABL:17 < ABL:31 + 1
	I |= 4
	J |= 4
ENDIF

;陰蒂感覺が自慰中毒＋１レベルでないと能力不足
IF ABL:0 < ABL:31 + 1
	I |= 4
	J |= 4
ENDIF

;最低でも1回・1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1
SIF D < 1
	D = 1
SIF E < 1
	E = 1

;自慰經驗で上げる場合
;欲情點數が不足
SIF JUEL:5 < A
	I |= 1
;陰核點數が不足
SIF JUEL:0 < B
	I |= 1
;恥情點數が不足
SIF JUEL:8 < C
	I |= 1
;自慰經驗が不足
SIF EXP:10 < D
	I |= 2

;調教自慰經驗で上げる場合
;欲情點數で上げる
SIF JUEL:5 < A
	J |= 1
;陰核點數で上げる
SIF JUEL:0 < B
	J |= 1
;恥情點數で上げる
SIF JUEL:8 < C
	J |= 1
;調教自慰經驗が必要
SIF EXP:11 < E
	J |= 2

IF I == 0 || J == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
