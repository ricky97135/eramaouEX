@GROUP_BATTLE_DEATH_CHECK
#DIM ALIVE
#DIM ATKID
#DIM DEFID
;--------------------------------------
;ALIVE = 生き殘り數

;敵人側の生き殘りを算出
B = 0
ALIVE = 0
REPEAT 3
	B += 99
	IF E:B > 0
		ALIVE = 1
		BREAK
	ENDIF
	B -= 99
	IF DEFID == 3
		PRINTFORMW %ITEM:DEFID%衝散了瀕死的%ITEM:ATKID%、並俘虜了他們的精神。
	ENDIF
	B += 100
REND

;全滅時
IF ALIVE == 0
	PRINTL %ITEM:ATKID%的作戰失敗了………
	RETURN 2
ENDIF

