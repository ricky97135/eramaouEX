;口上が存在すればそちらを優先

;著衣OFFのとき全裸に
SIF FLAG:37 == 0
	CFLAG:40 = 0
	

;初調教時
IF CFLAG:10 == 1
	PRINTFORML %SAVESTR:TARGET%的第一次調教開始了，把她變成棒棒噠性奴隸吧！
	PRINTL 
 
	IF FLAG:37
		CALL PRITRAIN_MESSAGE_CLOTHED
	ELSE
		CALL PRITRAIN_MESSAGE_NOCLOTHES
	ENDIF

	IF TALENT:23
		PRINTFORML 
		PRINTFORML 然而在%SAVESTR:TARGET%的眼神最深處卻好像流淌著期待的光芒。
	ENDIF

	IF ASSI > 0
		IF TALENT:ASSI:83
			PRINTFORML 
			PRINTFORML 助手%SAVESTR:ASSI%心想著如何才能盡情享受凌辱%SAVESTR:TARGET%的樂趣。
			PRINTFORML 那獵人看向獵物的眼神已經將她的心思完全暴露了出來。
		ELSEIF TALENT:ASSI:13
			PRINTFORML 
			PRINTFORML 助手%SAVESTR:ASSI%看到%SAVESTR:TARGET%的這個樣子，
			PRINTFORML 在得到%CALLNAME:MASTER%的許可后，輕輕把手放到了%SAVESTR:TARGET%的肩上。
			SIF TALENT:11
				PRINTFORML 而%SAVESTR:TARGET%卻無情地把手甩開了。
		ENDIF
	ENDIF

	WAIT
	RETURN 1
ENDIF

PRINTFORML %SAVESTR:TARGET%的第{CFLAG:10}次調教開始了。

S = 0

;崩壞している場合
IF TALENT:9
	WAIT
	PRINTFORM %SAVESTR:TARGET%
	CALL PRINT_CLOTHTYPE
