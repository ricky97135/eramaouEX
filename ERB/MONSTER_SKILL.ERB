@MONSTER_SKILL, ARG:0, ARG:1, ARG:2
#DIM DMG
#DIM PALAM_DOWN
;-----------------------------------------------------
;怪物の特殊能力。ARG:0=対象 ARG:1=使用能力 ARG:2=使用者 LOCAL:0=使用者ID LOCAL:1=使用者レベル

LOCAL:0 = E:(ARG:2)
LOCAL:1 = E:(ARG:2 + 1) + CFLAG:0:9
DMG = LOCAL:1

;パラメータ変動系効果
PALAM_DOWN = (DMG / 5) + 1

;発動確率（2/3）
SIF RAND:3 == 0
	RETURN 0

;強化補正
DMG += DMG / 2

;ダメージキャップ
SIF DMG > 400
	DMG = 400
;パラメータ変動キャップ
SIF PALAM_DOWN > 50
	PALAM_DOWN = 50
	
;-----------------------------------------------------
;怪物特殊一覧
;-----------------------------------------------------
;0  無
;1  粘液捕獲
;2  落穴捕獲
;3  藤蔓捕獲
;4  鎧破壞
;5  透明
;6  再生
;7  擬態
;8  迷惑
;9  吐息
;10 麻痹
;11 誘惑
;12 混亂
;13 經驗值吸取
;14 破鎧吐息
;15 魔力吸取
;16 射撃
;17 地形能力
;18 肉鎧

IF ARG:1 == 1
	;1 粘液捕獲
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%的粘液四處飛散！（氣力-{LOCAL:1}）
	BASE:(ARG:0):1 -= LOCAL:1
ELSEIF ARG:1 == 2
	;2 落穴捕獲
	SIF FLAG:5 & 32
		PRINTFORMW 對手掉下了%MONSTERNAME(LOCAL:0)%的落穴！（HP-{LOCAL:1}）
	BASE:(ARG:0):0 -= LOCAL:1
ELSEIF ARG:1 == 3
	;3 藤蔓捕獲
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%的藤蔓奪取了對手身體的自由！（攻擊-{PALAM_DOWN}）
	CFLAG:(ARG:0):11 -= PALAM_DOWN
ELSEIF ARG:1 == 4
	;4 鎧破壞
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%破壞了對手的鎧甲！（防禦-{PALAM_DOWN}）
	CFLAG:(ARG:0):12 -= PALAM_DOWN
ELSEIF ARG:1 == 5
	;5 透明
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%變為透明了……（防禦+2）
	E:(ARG:2 + 3) += 2
ELSEIF ARG:1 == 6
	;6 再生
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%加速再生著……（防禦+3）
	E:(ARG:2 + 3) += 3
ELSEIF ARG:1 == 7
	;7 擬態
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%巧妙地擬態著……（防禦+5）
	E:(ARG:2 + 3) += 5
ELSEIF ARG:1 == 8
	;8 迷惑
	IF RAND:3 == 0
		SIF FLAG:5 & 32
			PRINTFORMW %SAVESTR:(ARG:0)%迷失了！
		CFLAG:(ARG:0):509 = 1
	ENDIF
ELSEIF ARG:1 == 9
	;9 吐息
	LOCAL:2 = DMG * 3
	LOCAL:2 /= 2
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%噴出了吐息！！（HP-{LOCAL:2}）
	BASE:(ARG:0):0 -= LOCAL:2
ELSEIF ARG:1 == 10
	;10 麻痹
	LOCAL:2 = PALAM_DOWN * 3
	LOCAL:2 /= 2
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%噴出了麻痹氣體！！（攻擊-{LOCAL:2}）
	CFLAG:(ARG:0):11 -= LOCAL:2
ELSEIF ARG:1 == 11
	;11 誘惑
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%誘惑著對手……（善惡值:-2 好感度+4）
	CFLAG:(ARG:0):2 += 4
	CALL karma, ARG:0, -2
ELSEIF ARG:1 == 12
	;12 混亂
	LOCAL:2 = DMG * 3
	LOCAL:2 /= 2
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%發出混亂電波！！（氣力-{LOCAL:2}）
	BASE:(ARG:0):1 -= LOCAL:2
ELSEIF ARG:1 == 13
	;13 經驗值吸取
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%發動經驗吸取！！（經驗值-{DMG}）
	EXP:(ARG:0):80 -= DMG
;	IF EXP:(ARG:0):80 < 0
;		CFLAG:(ARG:0):9 -= 1
;		EXP:(ARG:0):80 = CFLAG:(ARG:0):9 * 10
;		;ステータスも減少
;		CFLAG:(ARG:0):11 -= 1
;		CFLAG:(ARG:0):12 -= 1
;		CFLAG:(ARG:0):13 -= 1
;		CFLAG:(ARG:0):14 -= 1
;		SIF FLAG:5 & 32
;			PRINTFORMW 等級下降了……
;	ENDIF
	CALL CHARA_LV_CHECK,(ARG:0)
ELSEIF ARG:1 == 14
	;14 破鎧吐息
	LOCAL:2 = DMG * 3
	LOCAL:2 /= 2
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%噴出了破壞鎧甲的吐息！！（HP-{LOCAL:1 * 2} 防禦-{PALAM_DOWN}）
	BASE:(ARG:0):0 -= LOCAL:2
	CFLAG:(ARG:0):12 -= PALAM_DOWN
ELSEIF ARG:1 == 15
	;15 魔力吸取
	LOCAL:2 = DMG * 3
	LOCAL:2 /= 2
	SIF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%發動了魔力吸取！！（氣力-{LOCAL:2} 防禦+4）
	BASE:(ARG:0):1 -= LOCAL:2
	E:(ARG:2 + 3) += 4
ELSEIF ARG:1 == 16
	;16 射撃
	IF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%用弓箭發動了攻擊！！（HP-{DMG}）
	ENDIF
	BASE:(ARG:0):0 -= DMG
ELSEIF ARG:1 == 17
	;16 地形効果
	CALL MONSTER_ROOM_SKILL, ARG:0, ARG:2
ELSEIF ARG:1 == 18
	;18 肉鎧
	IF FLAG:5 & 32
		PRINTFORMW %MONSTERNAME(LOCAL:0)%從身上的肉便器吸收著體力……（防禦+2）
	ENDIF
	E:(ARG:2 + 3) += 2
ENDIF

RETURN 0

